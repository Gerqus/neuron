{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "sourceRoot": "./src",
        "outDir": "./dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    }
}